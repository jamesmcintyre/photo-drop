doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/lib/bootstrap/dist/css/bootstrap.min.css')
    link(rel='stylesheet', href='/lib/bootstrap-material-design/dist/css/bootstrap-material-design.min.css')
    link(rel='stylesheet', href="/lib/bootstrap-material-design/dist/css/ripples.min.css")
    link(rel="stylesheet", href="//fonts.googleapis.com/icon?family=Material+Icons|Roboto+Slab")
    link(rel='stylesheet', href='/lib/animate.css/animate.min.css')
    link(rel='stylesheet', href='/css/style.css')
    script(src="/lib/jquery/dist/jquery.min.js")
    //- script(src="https://code.jquery.com/jquery-2.2.0.min.js")
    script(src="/js/main.js")
    //- script(src="/lib/bootstrap-material-design/dist/js/ripples.min.js")
    //- script(src="/lib/bootstrap-material-design/dist/js/material.min.js")
  body
    .container
      .navbar
        .container-fluid
          .navbar-header
            button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-warning-collapse')
              span.icon-bar
              span.icon-bar
              span.icon-bar
            a.navbar-brand(href='/') #{ title }
              //- i.material-icons photo_camera
          .navbar-collapse.collapse.navbar-warning-collapse
            ul.nav.navbar-nav
              li.active
                if (login === true)
                  a(href='/users/profile') Home
                else
                  a(href='/') Home
            ul.nav.navbar-nav.navbar-right
              if (login === false)
                li
                  a(href='/login') Login
              if (login === false)
                li
                  a(href='/register') Sign Up
              if (login === true)
                li
                  a(href='/users/logout') Logout
      block content
      
      block scripts
      
