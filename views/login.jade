extends layout

block content

  .panel.panel-default.animated.fadeInUp
    .panel-body
      .col-sm-5.text-right#instruct
        h3 Login
        p Sign in to view your photos!
      .col-sm-6.rightpanel
        #regAlert.alert.alert-dismissible.alert-danger.template
          button.close(type='button', data-dismiss='alert') Ã—
          #errmsg
        form#login         
          .form-group
            label.control-label(for='email') Email address
            input.form-control(type='email', name="email", id="email", placeholder='Email')
          .form-group
            label.control-label(for='password') Password
            input.pass.form-control(type='password', name="password", id="password", placeholder='Password')
          button#loginButton.btn.btn-default.btn-raised(type='submit') Login

block scripts
  script(src="/js/login.js")
